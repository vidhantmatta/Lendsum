<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#031316">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/photo"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/user"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="35dp"
            android:text="Rahul K\n07/06/1998
rahulkrishnan221@gmail.com"
            android:textColor="@color/textcolor"
            android:textSize="17.5dp"
            android:layout_marginLeft="14dp">

        </TextView>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@+id/photo"
        android:id="@+id/aadhar">
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="AADHAR:"
            android:textSize="22dp"
            android:layout_marginLeft="35dp"
            android:textColor="#e65100"
            android:fontFamily="casual"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="8324 6222 0367"

            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/textcolor"
            android:fontFamily="casual"/>









    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/debt"
        android:layout_below="@+id/aadhar">
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Debts"
            android:layout_marginLeft="55dp"
            android:textColor="@color/textcolor"
            android:textSize="20dp"
            android:fontFamily="casual"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="@color/textcolor"
            android:text="Assets"
            android:fontFamily="casual"
            android:layout_marginLeft="100dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/debt2"
        android:layout_below="@+id/debt">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:background="@android:color/darker_gray"
            android:layout_marginLeft="184dp"

            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@color/textcolor"
            android:text="Parental Property:
            Rs 2500000"
            android:layout_marginBottom="300dp"
            android:fontFamily="casual"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginRight="300dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/lowest"

        android:layout_below="@+id/debt2">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:background="@android:color/darker_gray"
            android:layout_marginLeft="184dp"
            android:layout_marginBottom="5dp"

            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@color/textcolor"
            android:text="Annual Income:
            Rs 1200000"
            android:layout_marginBottom="300dp"
            android:fontFamily="casual"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_below="@+id/debt">
        <TextView
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:textColor="@color/textcolor"
            android:text="Credit Card outstandings:
            Rs 20000"
            android:fontFamily="casual"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:textColor="@color/textcolor"
            android:text="Car Loan:\nRs 650000"
            android:fontFamily="casual"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:fontFamily="casual"
            android:textColor="@color/textcolor"
            android:id="@+id/loannew"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/lowest">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Loan Amount"
            android:background="@drawable/edittextbow"
            android:textColorHint="@color/texthintcolor"
            android:layout_marginTop="20dp"

            android:textColor="@color/texthintcolor"
            android:inputType="textCapSentences"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:id="@+id/loan" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="?selectableItemBackground"
            android:layout_marginLeft="140dp"
            android:id="@+id/arrow"
            android:src="@drawable/arrow"/>
    </LinearLayout>


    </RelativeLayout>